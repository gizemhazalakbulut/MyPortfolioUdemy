@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input class="form-control" asp-for="Title" />
							<br />
							<label>Hakkımda</label>
							<textarea class="form-control" asp-for="SubDescription" rows="5"></textarea>
							<br />
							<label>Detay</label>
							<textarea class="form-control" asp-for="Details" rows="5"></textarea>
							<br />
							<button class="btn btn-warning">Güncelle</button>
						</form>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>

